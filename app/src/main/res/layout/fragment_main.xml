<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="58dp">

    <TextView
        android:id="@+id/text_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:textColor="#fff"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="0dp"
        android:layout_marginRight="0dp"
        android:typeface="monospace"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speed"
        android:layout_alignEnd="@id/text_speed"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="4dp"
        android:typeface="monospace"
        android:text="@string/unit_km_h"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speed"
        android:layout_alignEnd="@id/text_speed"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:typeface="monospace"
        />

    <TextView
        android:id="@+id/cadence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_text"
        android:layout_alignEnd="@id/text_speed"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="#fff"
        android:typeface="monospace"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#1000"
        />
    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list"
        android:text="@string/button_start"
        android:onClick="onStartClick"
        />
    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list"
        android:layout_toRightOf="@id/button_start"
        android:text="@string/button_stop"
        android:onClick="onStopClick"
        />

    <Button
        android:id="@+id/button_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_start"
        android:text="@string/button_prepare"
        android:onClick="onPrepareClick"
        />
    <Button
        android:id="@+id/button_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_stop"
        android:layout_toRightOf="@id/button_start"
        android:text="@string/button_tick"
        android:onClick="onTickClick"
        />
    <Button
        android:id="@+id/button_cadence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_stop"
        android:layout_toRightOf="@id/button_tick"
        android:text="@string/button_cadence"
        android:onClick="onCadenceTick"
        />
</RelativeLayout>