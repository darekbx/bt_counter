<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.btcounter.utils.FontTextView
        android:id="@+id/text_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:textSize="168sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="-20dp"
        android:paddingLeft="12dp"
        android:paddingRight="0dp"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/odo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speed"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="10dp"
        android:textSize="36sp"
        android:typeface="monospace"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/odo_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-12dp"
        android:layout_marginRight="10dp"
        android:textSize="52sp"
        android:typeface="monospace"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/cadence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-12dp"
        android:layout_marginRight="-7dp"
        android:textSize="52sp"
        android:typeface="monospace"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/average_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_speed"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-14dp"
        android:text="@string/average_speed"
        android:textColor="@color/text_unit_color"
        android:textAllCaps="true"
        style="@style/small_text"
        />
    <com.btcounter.utils.FontTextView
        android:id="@+id/average_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/average_text"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-6dp"
        android:textSize="32sp"
        style="@style/small_text"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/max_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cadence_text"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="6dp"
        android:textSize="32sp"
        style="@style/small_text"
        />
    <com.btcounter.utils.FontTextView
        android:id="@+id/max_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/max_speed_value"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-6dp"
        android:textAllCaps="true"
        android:text="@string/max_speed"
        android:textColor="@color/text_unit_color"
        style="@style/small_text"
        />

    <com.btcounter.utils.FontTextView
        android:id="@+id/debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:textSize="19sp"
        android:textColor="@color/text_color"
        />

</RelativeLayout>